{
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noImplicitOverride": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"allowUnreachableCode": false,
		"module": "CommonJS",
		"target": "ESNext",
		"moduleResolution": "Node",
		"lib": ["esnext", "ESNext.Disposable"],
		"esModuleInterop": true,
		"declaration": true,
		"noEmitHelpers": true
	}
}
